@* products  *@

<div class="container py-5" id="PRODUCTS">
    <div class="tab-class text-center">
        <div class="row g-4">
            <div class="col-lg-4 text-start">
                <h1 class="fw-bold mb-5" style="font:45px !important ;">Our Products</h1>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    <div class="col-lg-12">
                        <div class="row g-4">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="rounded position-relative fruite-item border border-secondary">
                                        <div class="fruite-img">
                                            <a href="/Customer/Home/Details/@item.Id">
                                                <img src="~/@item.Img" style="width:320px !important ; height:300px !important;" class="img-fluid w-100 rounded-top" alt="">
                                            </a>
                                        </div>
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.Category.Name</div>
                                        <div class="p-4 border border-secondary rounded-bottom" style="height:280px !important;">
                                            <h3 class="fw-bold mb-4">@item.Name</h3>

                                            <p class="product-description">@item.Description</p>
                                            <button class="show-more-btn btn btn-sm btn-link p-0">Show More</button>

                                            <div class="d-flex justify-content-between flex-lg-wrap mt-3">
                                                <p class="text-dark fs-5 fw-bold mb-0 ">$@item.Price</p>
                                                <a href="/Customer/Home/Details/@item.Id" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                    <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to Cart
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-description {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        height: 4.5em;
        transition: all 0.3s ease;
    }

        .product-description.expanded {
            -webkit-line-clamp: unset;
            height: auto;
        }

    .show-more-btn {
        margin-top: 5px;
        color: #007bff;
        cursor: pointer;
        font-weight: bold;
        font-size: 14px;
    }
</style>

<script>
    const lines = [
        { id: "line1", text: "All original copies", delay: 0 },
        { id: "line2", text: "You Will Find All The Products You want.", delay: 200 },
        { id: "line3", text: "Technology Hack You Won't Get.", delay: 100 }
    ];

    function typeLine(id, text, delay) {
        setTimeout(() => {
            let i = 0;
            const interval = setInterval(() => {
                document.getElementById(id).textContent += text[i];
                i++;
                if (i === text.length) clearInterval(interval);
            }, 50);
        }, delay);
    }

    lines.forEach(line => {
        typeLine(line.id, line.text, line.delay);
    });

    window.addEventListener('DOMContentLoaded', () => {
        const btn = document.getElementById("shopNowBtn");
        setTimeout(() => {
            btn.classList.add("fade-slide-in");
        }, 4500);

        // Show more logic
        const buttons = document.querySelectorAll('.show-more-btn');
        buttons.forEach(btn => {
            btn.addEventListener('click', function () {
                const desc = this.previousElementSibling;
                desc.classList.toggle('expanded');
                this.textContent = desc.classList.contains('expanded') ? 'Show Less' : 'Show More';
            });
        });
    });
</script>
